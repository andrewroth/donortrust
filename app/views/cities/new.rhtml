<h1>New city</h1>

<%= error_messages_for :city %>

<% form_for(:city, :url => cities_path) do |f| %>
<p>
    <b>City Name</b><br />
    <%= f.text_field :city_name %>
  </p>

  <p>
    <b>Region</b><br />
    <%= select (:city, "region_id", @regions.collect {|p| [ p.region_name, p.id ] } ) %>
  </p>
  
  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', cities_path %>