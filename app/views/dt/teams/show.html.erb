<% content_for :rss do %>
	<link href="<%= formatted_dt_team_path(@team,:rss)%>" title="RSS 2.0" rel="alternate" type="application/rss+xml" />
<% end %>
<div id="team">
	<div  class="campagin_container">
		<h1><%= @team.name %> <%= "- PENDING! " unless not @team.pending? %> <%= (" - " + link_to('Join this team!', new_dt_team_participant_path(@team))) unless @team.users.include? current_user%></h1>
		<h5 style="margin-top:-10px;">
			<%= link_to "http://www.christmasfutrue.org/#{@team.campaign.short_name}/team/ #{@team.short_name}", show_campaign_team_path(@team.campaign.short_name,@team.short_name) %>
		</h5>
		<p>
			
			<%= image_tag @team.picture.full.url, :class => :thumbnail %>
			<%= @team.description %>
		</p>
		
		<%= render :partial => 'dt/news_items/news', :locals => {:postable => @team}%>
		<%= render :partial => 'dt/wall_posts/wall',  :locals => {:postable => @team} %>

	
		<div id="team_members">
			<%= campaign_h2_header('Participants | ' + link_to('Join this team!',new_dt_team_participant_path(@team)),'participant_container') %>
			<div id="participant_container" class="row_container">
				<%= render :partial => 'dt/participants/participant', :collection => @team.participants %>
			</div>
		</div>
	</div>
	<div class="metrics">
		<h2>Metrics</h2>
		<h4>Goal</h4>
		<span class="small_text">
			TODO : Add Team Goal
		</span>
		<h4>Campaign</h4>
		<span class="small_text">
			<%= link_to @team.campaign.name, dt_campaign_path(@team.campaign) %>
		</span>
		<h4>Pledged</h4>
		<span class="small_text">
			<%= @team.funds_raised %> $CDN
		</span>
		<h4>Particpants</h4>
		<span class="small_text">
			<%= @team.participants.size %>
		</span>
	</div>
</div>