<h1>Create a New team</h1>

<%= error_messages_for :team %>

<% form_for([:dt, @campaign, @team], :html => {:multipart => true}) do |f| %>
	<fieldset class="campaign_form">
		<label>Team Name</label>
	    <%= f.text_field :name %>
	
		<label>Short Name</label>
		<span class="small_text">
			http://www.christmasfuture.org/dt/<%= @campaign.short_name %>/team/
		</span>
		<%= f.text_field :short_name %><%= what_is_this?'short_name', 'The short name is a small (10-20 characters) name to describe your team. It should not contain any spaces. Also this name will be used to provide your team with a Christmas Future URL. http://www.christmasfuture.org/yourCampaignShortName/team/youTeamShortName'%>
		
		<%= observe_field	:team_short_name, 
							:frequency => 1,
							:url => validate_short_name_of_new_dt_team_path(:campaign_id => @campaign),
							:with => :team_short_name
							%>
							
		<%= show_spinner("Validating ") %>
		
		<div id="errors" style="display:none;">
		</div>
		<label>Description (Share a little bit about your team)</label>
		<%= fckeditor_textarea( "team", "description", :height => 200 ) %> 
		
		<label>Team Image (<50kb, if you don't use one a default image will be used for you)</label>
		<%= upload_column_field :team,  :picture  %>
		
		<label>Fundraising Goal</label>
		<span class="small_text">$ </span><%= f.text_field :goal %>
		
		<label>Team Contact Email</label>
		<%= f.text_field :contact_email %> <span class="small_text">Use My Email (<%= current_user.email%>)</span>
		<%= f.check_box :use_user_email, :onclick => "Element.toggle('team_contact_email');"%><br />
		<%= f.check_box :ok_to_contact %><span class="small_text">It is ok for participants to contact me via this email.  (email will be shown on team pages)</span><br />
		<%= f.check_box :require_authorization%><span class="small_text">Require my approval for new people to join team</span>
		<p>
			<%= f.submit "Create" %>
		</p>
  	<fieldset>
<% end %>

