<div class="statcontent clearfix" id="statwidget-<%= statistic_widget.id %>">
  <div class="statprogress" style="width:<%= statistic_widget.progress_as_percentage(render(:inline => statistic_widget.progress)) %>%;"></div>
  <div class="statgoal"><%= send(statistic_widget.goal_modifier, render(:inline => statistic_widget.progress)) %>/<%= send(statistic_widget.goal_modifier, statistic_widget.goal) %> <%= statistic_widget.goal_name %></div>
</div>

