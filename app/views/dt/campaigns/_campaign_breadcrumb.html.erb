<div class="campaign-breadcrumb">
	<ul class="arrow">
	<% if @participant != nil %>
		<li><%= link_to(@participant.team.campaign.name,dt_campaign_path(@participant.team.campaign)) %></li>
		<li><%= link_to(@participant.team.name,dt_team_path(@participant.team)) %></li>
		<li><%= link_to(@participant.name,dt_participant_path(@participant)) %></li>
		<% if controller.controller_name == 'pledges' %>
			<li>Sponsor</li>
		<% else %>
			<%= "<li>" + controller.action_name + " personal profile</li>" if controller.action_name !="show" %>		
		<% end %>
	<% elsif @team != nil %>
		<li><%= link_to(@team.campaign.name,dt_campaign_path(@team.campaign)) %></li>
		<li><%= link_to(@team.name,dt_team_path(@team)) %></li> 
		<% if controller.controller_name == 'pledges' %>
			<li>Sponsor</li>
		<% else %>
			<%= "<li>" + controller.action_name + " team profile</li>" if controller.action_name !="show" %>
		<% end %>
	<% elsif @campaign != nil %>
		<li><%= link_to(@campaign.name,dt_campaign_path(@campaign)) %></li>
		<% if controller.controller_name == 'pledges' %>
			<li>Sponsor</li>
		<% else %>
			<%= "<li>" + controller.action_name + " campaign profile</li>" if controller.action_name !="show" %>
		<% end %>
	<% end %>
	</ul>
</div>