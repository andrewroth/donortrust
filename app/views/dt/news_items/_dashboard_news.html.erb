<% show_post_form ||= false %>
<% show_content ||= true %>
<div id="news">
	<% if show_post_form %>
		<%= dashboard_h4(' Post New News!','post_news_container',true)%>
		<div id="post_news_container" style="display:none;">
			<%= render :partial => 'dt/news_items/post_form', :locals => {:postable => postable}%>
		</div>
	<% end %>
	<% if postable.news_items.size != 0 and not show_content %>
			<%= dashboard_h4(' Recent News ' + link_to(image_tag('dt/icons/rss_icon.gif'),url_for([:dt, postable, NewsItem.new]) + '.rss'),'news_container',true)%>
		<div id="news_container", style="display:none">
			<%= render :partial => 'dt/news_items/news_item', :collection => postable.news_items.reverse %>
		</div>
	<% end %>
</div>