<div class="full-display-project-header clearfix">
	<div class='full-display-project-title'><%= @project.name %></div>
	<div class="full-display-sector-images"><%= sector_images(@project.id) %></div>

	<div class="project-location-link">
		<% if @project.community_id %><%= "#{link_to @project.community.name, community_dt_project_path(@project)}" %><%= ', ' if @project.nation_id?  %><% end %><%= (@project.nation_id)? "#{link_to @project.nation.name, nation_dt_project_path(@project)}": ""%>
	</div>
</div>

<div class="project-content">
	<% if @flickr_images.size > 0 %>
		<script type="text/javascript">

			/***********************************************
			* DHTML slideshow script-  Â© Dynamic Drive DHTML code library (www.dynamicdrive.com)
			* This notice must stay intact for legal use
			* Visit http://www.dynamicdrive.com/ for full source code
			***********************************************/

			var photos=new Array()
			var photoslink=new Array()
			var which=0

			//Specify whether images should be linked or not (1=linked)
			var linkornot=1

			//define images. You can have as many as you want:
			<% count=0
			@flickr_images.each do |img| 
			photo = Flickr::Photo.new(img.photo_id.to_s)
			%>
			photos[<%=count%>] = "<%= photo.sizes[2]['source'] %>"
			photoslink[<%=count%>]="<%=photo.url%>"

			<%  count+=1 
			end %>

			//do NOT edit pass this line

			var preloadedimages=new Array()
			for (i=0;i<photos.length;i++){
				preloadedimages[i]=new Image()
				preloadedimages[i].src=photos[i]
			}

			function applyeffect(){
				if (document.all && photoslider.filters){
					photoslider.filters.revealTrans.Transition=Math.floor(Math.random()*23)
					photoslider.filters.revealTrans.stop()
					photoslider.filters.revealTrans.apply()
				}
			}
			function playeffect(){
				if (document.all && photoslider.filters)
				photoslider.filters.revealTrans.play()
			}

			function keeptrack(){
				window.status="Image "+(which+1)+" of "+photos.length
			}


			function backward(){
				if (which>0){
					which--
					applyeffect()
					document.images.photoslider.src=photos[which]
					playeffect()
					keeptrack()
				}
			}

			function forward(){
				if (which<photos.length-1){
					which++
					applyeffect()
					document.images.photoslider.src=photos[which]
					playeffect()
					keeptrack()
				}
			}

			function transport(){
				window.location=photoslink[which]
			}
		</script>

		<div id='flickr-wrapper'>
			<div id='project-flickr-slide-show' >
				<script>
					if (linkornot==1)
					document.write('<a href="javascript:transport()">')
					document.write('<img src="'+photos[0]+'" name="photoslider" style="filter:revealTrans(duration=2,transition=23)" border=0>')
					if (linkornot==1)
					document.write('</a>')
				</script>
			</div>
			<a class='flickr-left-link' href="#" onClick="backward();return false">&laquo; previous</a>
			<a class='flickr-right-link' href="#" onClick="forward();return false"> next &raquo;</a>
		</div>
	<% end # end flickr div%>

	<%= @project.description %>
</div>
<div class='project-sidebar'>
	<div id="project-accordion" class="accordion">		
		<div class="accordion-toggle">Quick Facts</div>    
		<div class="accordion-content">
			<div class="quickfacts">
				<%= render :partial => 'small_project_quickfacts' %>
			</div>
		</div>    

		<% if @budget_items%>
			<div class="accordion-toggle">Financial Data</div>    
			<div class="accordion-content">
				<div class="quickfacts">
					<%= render :partial => 'project_financial_data' %>
				</div>
			</div>
		<% end%>

		<% if @project.partner %>
			<div class="accordion-toggle">Implementing Organization</div>    
			<div class="accordion-content">
				<div class="quickfacts">
					<ul>
						<li><strong>Organization:</strong><%=h @project.partner.name%></li>
					</ul>
				</div>
			</div>
		<% end %>
	</div>
	<div class="project-sidebar-buttons">
		<% if @project.fundable? %>
			<%= link_to "<img src='/images/dt/placeholders/give.gif' alt='Give' />", new_dt_gift_path(:project_id => @project) %>
		<% end %>
		<a href="/dt/tell_friends/new?project_id=<%=@project.id%>"><img src="/images/dt/nav_elements/buttonsCF/tellFriend_lgrey2.gif"></a>
	</div>
</div>


<%= javascript_tag "document.observe('dom:loaded', function(){ accordion = new Accordion('project-accordion', 1);})"%>

<div class="project-details">
	<div class ="detail-tabs clearfix">
		<ul id='ul-project' class="left-tabs clearfix">
			<li class="detail-tab" id='project-li'><a href="#home" class="nav-tab" onclick="tab_select( $('project-li'), $('project_plan') );"><span>Project Plan</span></a></li>
			<li class="detail-tab" id='intended-li'><a href="#intended" class="nav-tab" onclick="tab_select( $('intended-li'), $('intended_outcome') );"><span>Intended Outcome</span></a></li>
			<li class="detail-tab" id='measurable-li'><a href="#measurable" class="nav-tab" onclick="tab_select( $('measurable-li'), $('measurable_feedback') );"><span>Measurable Feedback</span></a></li>
			<li class="detail-tab" id='stories-li'><a href="#stories" class="nav-tab" onclick="tab_select( $('stories-li'), $('project_stories') );"><span>Stories</span></a></li>
			<li class="detail-tab" id='photos-li' onclick="tab_select( $('photos-li'), $('project_photos') );"><a href="#photos" class="nav-tab" ><span>Photos</span></a></li>
			<li class="detail-tab" id='videos-li' onclick="tab_select( $('videos-li'), $('project_videos') );">
				<%= link_to_remote '<span>Videos</span>',
					:url  => {:controller => :projects, :action => 'get_videos'},
					:method => :get,
					:before   => %(Element.show("ajax_busy")),
					:success  => %(Element.hide("ajax_busy")),
					:html => {:id => @project.id, :class=>'nav-tab'}
			%>
			</li>
			<%= javascript_tag "document.observe('dom:loaded', function(){  init_tab();})"%>
		</ul>
	</div>
	<div class="detail-content">
		<%= show_spinner() %>
		<div id='project_plan'>
			<% if !@project.milestones.empty? && !@project.target_start_date.nil? %>
				<%
				project_timeline = ::Simile::Timeline::Timeline.new(
					:name        => "ProjectsTimeline",
					:event_source => {
						:controller => 'dt/projects',
						:action     => 'timeline',
						:id         => params[:id]
					},
					:event_band   => :weeks,
					:bands       => {
						:weeks => {
								:trackGap       => '0.1',
								:showEventText  => 'true',
								:width          => '"75%"',
								:intervalUnit   => 'Timeline.DateTime.WEEK',
								:intervalPixels => '50',
								:date           => "'" + (@project.target_start_date >> 1).strftime("%b %d %Y") + "'"
							},
						:months => {
							:trackGap       => '0.1',
							:width          => '"25%"',
							:intervalUnit   => 'Timeline.DateTime.MONTH',
							:intervalPixels => '150',
							:trackHeight    => '0.5', 
							:showEventText  => 'false',
							:date           =>  "'" + (@project.target_start_date >> 1).strftime("%b %d %Y") + "'"
						} 
					},
					:bands_order => [ :weeks, :months],
					:highlight => [:weeks, :months],
					:synchronize => {
						:months => :weeks
					}
				)
				-%>
				<div id="projectTimeline"><%= simile_timeline(project_timeline, { :class => 'default_timeline' } ) %></div>
			<% else %>
				<h2>There is no project plan data available.</h2>
			<% end %>  
		</div>

		<!-- intended outcome -->
		<div id='intended_outcome' style='display:none'>


			<% if @project.intended_outcome? %>
			<h2>Intended Outcome</h2>
			<div>
				<%= @project.intended_outcome %>
			</div>
			<% else %>
				<h2>There is no intended outcome data available.</h2>
			<% end %>

		</div>

		<div id='measurable_feedback' style='display:none;'>
			<% if @project.meas_eval_plan? %>
			<h2>Measurements and Evaluations</h2>
			<div>
				<%= @project.meas_eval_plan %>
			</div>
			<% else %>
				<h2>There is no measurable feedback data available.</h2>
			<% end %>
		</div>
		<div id='project_stories' style='display:none;'>
		</div>

		<div id='project_photos' style='display:none'>
			<% if @flickr_images.size > 0 %>
				<h2>Project Photos</h2>
				<%= will_paginate @flickr_images, :param_name => 'flickr_page' %>
				<%= render :partial => 'flickr_photo', :collection => @flickr_images %>
			<% else %>
				<h2>There is no photos available.</h2>
			<% end %>
		</div>

		<div id='project_videos' style='display:none;'>
		</div>
	</div>
</div>

