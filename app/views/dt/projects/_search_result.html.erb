<% @project = search_result -%>
<div id="projectInfo-<%= @project.id %>">
  <div class="projectSearchResultHeader">
		<div class='project-title'><%= link_to @project.name, dt_project_path(@project) %></div>
		<!-- project sector images -->
		<div class="searchResultSectorImages"><%= sector_images(@project.id) %></div>
		<br>
		<div class="searchResultLocationLink">
			<%= (@project.community_id)? "#{link_to @project.community.name, community_dt_project_path(@project)}":"" %><%= ', ' if @project.nation_id?  %>
			<%= (@project.nation_id)? "#{link_to @project.nation.name, nation_dt_project_path(@project)}": ""%>
		</div>
	</div>
  <div class='project-content'>
    <div class='project-pre-info'>
      <% if @project.target_start_date? %>
      <span><strong>Target Start Date:</strong> <%= @project.target_start_date.to_formatted_s(:long) %></span>
      <% end %>
      <% if @project.partner_id? && @project.partner %>
      <span><strong>Organization:</strong> <%= link_to @project.partner.name, organization_dt_project_path(@project)%></span>
      <% end %>
    </div>
    <p><strong>Project Description:</strong>
      <% if (@project.short_description) && (@project.short_description!="") %>
    		<%= @project.short_description %>&nbsp; &#8250; <%= link_to "Read more&hellip;", dt_project_path(@project.id) %>
      <% else %>
    		<%= @project.summarized_description(75) %>&nbsp; &#8250; <%= link_to "Read more&hellip;", dt_project_path(@project.id) %>
    	<% end%>
    </p>
  </div>

  <div class='project-sidebar'>
    <div class="searchResultsQuickfacts">
      <%= project_quickfacts %>
    </div>
    <div class="projectbuttons clearfix">
      <% if @project.fundable? %><% link_to "<span>Gift this Project</span>", new_dt_gift_path(:project_id => @project), :class => "button-gift" %><% end %>
      <% if @project.fundable? %><% link_to "<span>Invest</span>", new_dt_investment_path(:project_id => @project), :class => "button-invest" %><% end %>
    </div>
  </div>

</div>
<div style="clear:both;"></div>