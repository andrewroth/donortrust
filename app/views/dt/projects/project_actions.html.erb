
    <div class="projectbuttons clearfix">
      <%= link_to "<img src='/images/dt/placeholders/give.gif' alt='Give' />", new_dt_gift_path(:project_id => @project) if @project.fundable? %>
    </div>
    <div class="projectactions">
      <ul>
        <li class="blueblock"><%= link_to "Tell-A-Friend", new_dt_tell_friend_path( :project_id => @project.id ) %></li>
        <li class="blueblock"><%= link_to "Send My Wishlist", new_message_dt_account_my_wishlists_path(current_user, :project_id => @project.id ) %></li>
        <% if !logged_in? || (logged_in? && !current_user.my_wishlists.find(:first, :conditions => {:project_id => @project.id})) %><li class="blueblock"><%= link_to "&nbsp;Add to My Wishlist", dt_account_my_wishlists_path(current_user, :project_id => @project), :method => :post %></li><% end %>
        <% if logged_in? && current_user.group_admin? %><li class="blueblock"><%= link_to "&nbsp;Add to Group Wishlist", new_dt_wishlist_path(:project_id => @project) %></li><% end %>
      </ul>
    </div>
