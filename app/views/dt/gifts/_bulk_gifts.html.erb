<div id="uploadnotification"></div>
<ol class="clearfix">
  <li>
    <div class="note">Please enter a list of email addresses (separated by commas) or upload a list of email addresses from your address book (using <strong>1a.</strong> below)</div>
    <label for="recipients">Gift Recipients</label><%= text_area_tag :recipients, params[:recipients], :rows => 5, :cols => 40 %>
  </li>
  <li>
    <label for="remove_dups" class="left" style="width:99%;">
      <%= check_box_tag :remove_dups, "1", true %> Remove Duplicate Emails
    </label>
  </li>
</ol>


<iframe src="<%= new_dt_email_upload_path %>" style="width:100%;height:155px;"></iframe>
<div style="margin-left:1.5em;"><%= render :partial => "dt/email_uploads/upload_frame" %></div>
