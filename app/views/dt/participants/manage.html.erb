<div>
	<h1><%= link_to @participant.user.full_name, dt_participant_path(@participant) %>'s page for <%= link_to @participant.team.campaign.name, dt_campaign_path(@participant.team.campaign) %>.</h1>
	
	<%= error_messages_for :participant %>
	<div class="campaign_form">
		<% form_for([:dt,@participant], :html => {:multipart => true}) do |f| %>
			<fieldset>
				<legend>Some details about your membership</legend>
				<label>A little bit about your self:</label>
				<%= f.text_area :about_participant, :cols => 70, :rows => 8 %>

				<label>Your personal goal for this campaign</label>
				
				<%= f.text_field :goal %>

				<label>Avatar Image (if you don't use one a default image will be used for you)</label>			
				<%= image_tag @participant.picture.thumb.url if @participant.picture? %>
				<%= image_tag 'dt/icons/dummy_user.png'unless @participant.picture != nil %><br/>
				<%= upload_column_field :participant,  :picture  %>
			</fieldset>
			<p>
				<%= f.submit 'Update'%>
			</p>	
		<% end %>
	</div>
	
	
	
	<%= render :partial => 'dt/news_items/news', :locals => {:postable => @participant, :show_post_form => true}%>
	
	<%= render :partial => 'dt/wall_posts/wall', :locals => {:postable => @participant, :show_post_form => false}%>
</div>