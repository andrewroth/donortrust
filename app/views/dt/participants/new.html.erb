<h1>Join This Campaign!</h1>
<div class="campaign_form">
	<% form_for([:dt,@team,@participant], :html => {:multipart => true}) do |f| %>
		<fieldset>
			<legend>Some details about your membership</legend>

			<label>A little bit about your self:</label>
			<%= f.text_area :about_participant, :cols => 70, :rows => 8 %>
			
			<label>Your personal goal for this campaign</label>
			<%= f.text_field :goal %>
			
			<label>Avatar Image (if you don't use one a default image will be used for you)<label>
			<%= upload_column_field :participant,  :picture  %>
		</fieldset>
		<p><br />
			<%= f.submit 'Create'%>
		</p>	
	<% end %>
</div>