<% content_for :rss do %>
	<link href="<%= formatted_dt_participant_path(@participant,:rss)%>" title="RSS 2.0" rel="alternate" type="application/rss+xml" />
<% end %>
<div id="team_member_page">
	<div class="campagin_container">
		<h1><%= @participant.user.full_name %>'s</h1>
		<h5 style="margin-top:-10px;"> <%= @participant.team.campaign.name %> page.</h5>
		<p>
			<%= image_tag @participant.picture.thumb.url, :class => :thumbnail %>
			<%= @participant.about_participant%>
		</p>

		<%= render :partial => 'dt/news_items/news',  :locals => {:postable => @participant} %>
		<%= render :partial => 'dt/wall_posts/wall',  :locals => {:postable => @participant} %>
	</div>
	<div class="metrics">
		<h2>Metrics</h2>
		<h4>Campaign</h4>
		<span class="small_text">
			<%= link_to(@campaign.name, dt_campaign_path(@campaign)) %>
		</span>
		<% if @campaign.allow_multiple_teams? %>
			<h4>Team</h4>
			<span class="small_text">
				<%= link_to(@participant.team.name, dt_team_path(@participant.team)) %>
			</span>		
		<% end %>
		<h4>Goal</h4>
		<span class="small_text">
			TODO : Add Personal Goal
		</span>
		<h4>Pledged</h4>
		<span class="small_text">
			<%= @participant.funds_raised %> $CDN
		</span>
          <%= link_to "<span>Pledge</span>", new_dt_participant_pledge_path(@participant), :class => "button-pledge" %>
	</div>
</div>
