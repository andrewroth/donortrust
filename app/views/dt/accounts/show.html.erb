<%- content_for :html_title do -%>My Account<%- end -%>
<%- content_for :nav do -%><%= dt_account_nav %><%- end -%>
<%- content_for :top_content do -%><%= render :partial => 'dt/accounts/inactive' if logged_in? && !current_user.activated? %><%- end -%>

<div id="intro">
</div>

<div class="projectlist" id="project-list">
  <h2>My Projects</h2>
  <p>These are the investments you have made</p>
	<% if @user.investments.size > 0 %>
    <ul>
      <%= render :partial => 'investment', :collection => @user.investments(:all, :order => 'created_at ASC') %>
    </ul>
	<% else %>
	  <div class="highlight">
	    <p>You have not invested in any projects.</p>
	    <p><%= link_to "Find a project", dt_projects_path %> that you're interested in and click the &quot;Invest&quot; button beside it.</p>
	  </div>
	<% end %>
</div>
  
<% if @transactions.total_entries > 0 %><p style="font-weight:bold;" class="textsm">Uninvested Funds: <%= number_to_currency(current_user.balance) %></p><% end %>
<div class="account-summary" style="margin-bottom:18px;">
	<%= will_paginate @transactions, :param_name => 'tx_page' %>
	<% if @transactions.length > 0 -%>
	<div id="transaction-list">
		<table style="width:100%;">
		<tr><th>Transaction Description</th><th>Date</th><th>Amount</th></tr>
		<%= render :partial => "transaction", :collection => @transactions %>
		</table>
	</div>
	<%= will_paginate @transactions, :param_name => 'tx_page' %>
	<% else -%>
	<div class="highlight">
		<p>You have not made any transactions in your account yet.</p>
		<p>Get started by <%= link_to "depositing money", new_dt_account_deposit_path(:account_id => current_user.id) %> into your account. You can use this money to Invest in projects and give Gifts to your friends and family.</p>
	</div>
	<% end -%>
</div>

<div class="campaignlist" id="campaign-list">
  <h2>My Campaign Participation</h2>
  <p>This is a list of the campaigns you are involved with:</p>
	<% if @participants.size > 0 %>
    <ul>
      <%= render :partial => 'participant', :collection => @participants %>
    </ul>
	<% else %>
	  <div class="highlight">
	    <p>You have not participated in any campaigns</p>
	  </div>
	<% end %>
</div>

<% if @user.tax_receipts.length > 0 -%>
<h2 style="margin-top:10px;">Tax Receipts</h2>
<div class="account-summary">
	<div id="transaction-list">
		<table style="width:100%;">
		<tr><th>Investment</th><th>Date</th><th>Amount</th></tr>
		<%= render :partial => "tax_receipt", :collection => @user.tax_receipts %>
		</table>
	</div>
</div>
<% end -%>

<%- content_for :sidebar do -%>
  <%= dt_profile_sidebar %>
<%- end -%>