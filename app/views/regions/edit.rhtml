<h1>Editing region</h1>

<%= error_messages_for :region %>

<% form_for(:region, :url => region_path(@region), :html => { :method => :put }) do |f| %>
   <p>
    <b>Region Name</b><br />
    <%= f.text_field :region_name %>
  </p>
  <p>
    <b>Nation</b><br />
    <%= select (:region, "nation_id", @nations.collect {|p| [ p.nation_name, p.id ] } ) %>
  </p>
  <p>
    <%= submit_tag "Update" %>
  </p>

<% end %>

<%= link_to 'Show', region_path(@region) %> |
<%= link_to 'Back', regions_path %>