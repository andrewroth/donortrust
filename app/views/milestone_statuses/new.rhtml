<h1>New milestone_status</h1>

<%= error_messages_for :milestone_status %>

<% form_for(:milestone_status, :url => milestone_statuses_path) do |f| %>
  <p>
    <b>Status</b><br />
    <%= f.text_field :status %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', milestone_statuses_path %>