<% @partner = profile_form -%>
<%= error_messages_for :partner %>

<% form_for :partner, :url => home_update_partner_path, :html => {:method => 'post'} do |f| %> 

<div id="stylized">	
	<fieldset class="sheet">
		<legend class="sheet_heading">Profile for <%= @partner.name %></legend>
	
		<ul class="form">
			<li>
				<label for="partner_description" class="title">
					Description
					<small>...</small>
				</label>
				<%= f.text_area :description, :rows => 10, :cols => 72 %>
			</li>

			<li>
				<label for="partner_website" class="title">
					Website
					<small>Your organisation's URL</small>
				</label>
				<%= f.text_field :website %>
			</li>

			<li>
				<label for="partner_mission_statement" class="title">
					Mission statement
					<small>...</small>
				</label>
				<%= f.text_area :mission_statement, :rows => 10, :cols => 72 %>
			</li>

			<li>
				<label for="partner_philosophy_dev" class="title">
					Philosophy
					<small>...</small>
				</label>
				<%= f.text_area :philosophy_dev, :rows => 10, :cols => 72 %>
			</li>

			<li>
				<label for="partner_business_model" class="title">
					Business model
					<small>...</small>
				</label>
				<%= f.text_area :business_model, :rows => 10, :cols => 72 %>
			</li>

			<li>
				<label for="partner_funding_sources" class="title">
					Funding sources
					<small>...</small>
				</label>
				<%= f.text_area :funding_sources, :rows => 10, :cols => 72 %>
			</li>

			<li>
				<%= submit_tag "Save", :class => 'buttonsubmit' %>
			</li>
		</ul>

<% end -%>
</div>


