<div id="contentContainer">
  <% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %>
  <% if flash[:error] %><div class="error"><%= flash[:error] %></div><% end %>

  <div id="featuredProjectList" class="active-scaffold">
	  <div class="active-scaffold-header">
		  <div class="actions">
				<%= link_to "Create new", new_bus_admin_project_url %>
			<% restrict_to "cf_admin" do -%>
        <%= link_to "Pending projects", '/bus_admin/projects/pending_projects' %>
			<% end -%>
		  </div>
		  <h2>Projects</h2>
	  </div>

		<table cellpadding="0" cellspacing="0">
		  <thead>
		    <tr>
					<th>Project</th>
					<th>Program</th>
					<th>Start</th>
					<th>Project Status</th>
					<th>Approval Status</th>
					<th>Actions</th>
		    </tr>
		  </thead>
		  <tbody class="records">
		    <% if !@projects.empty? -%>
		    	<%= render :partial => '/bus_admin/projects/show_project', :collection => @projects %>
				<% else -%>
					<td colspan="5">You have no projects.</td>
		    <% end -%>
		  </tbody>
		</table>
  </div>
</div>