<h1>Editing status</h1>

<%= error_messages_for :status %>

<% form_for(:status, :url => status_path(@status), :html => { :method => :put }) do |f| %>
  <p>
    <b>Category</b><br />
    <%= f.text_field :category %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', status_path(@status) %> |
<%= link_to 'Back', statuses_path %>