<h1>New status</h1>

<%= error_messages_for :status %>

<% form_for(:status, :url => statuses_path) do |f| %>
  <p>
    <b>Category</b><br />
    <%= f.text_field :category %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', statuses_path %>